@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model FilmShare.ViewModels.ActorModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="col-md-6 col-md-offset-3 profileWrap">
    <div class="text-center">
        <h2>@Model.Name</h2>
    </div>
    <div class="profileInfo">
        <div class="leftProfile">
            <div class="avatarUserBox">
                <img src=@Model.PhotoPath style='height: 100%; width: 100%; object-fit: contain'>
            </div>
        </div>

        <div class="form-group">
            <p>
                <b>@Localizer["NAME:"] </b>@Model.Name
            </p>
            <p>
                <b>@Localizer["DATE OF BIRTH:"] </b>@Model.DateOfBirth.ToShortDateString()
            </p>
        </div>
    </div>

    <div id="filmsContainer">
        @await Component.InvokeAsync("FilmShare.ViewComponents.Actor.Roles", new { actorId = Model.ActorId })
    </div>
</div>