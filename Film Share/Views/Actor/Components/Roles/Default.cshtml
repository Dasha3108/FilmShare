@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model List<FilmShare.ViewModels.RoleModel>

<div id="usersContainer">
    @if (Model.Count == 0)
    {
        <label>@Localizer["No films were found"]</label>
    }
    @foreach (var role in Model)
    {
        <div class="smallProfileInfo">
            <div class="leftProfile">
                <div class="smallAvatarUserBox">
                    <img src=@role.Film.PosterPath style='height: 100%; width: 100%; object-fit: contain'>
                </div>
            </div>
            <div class="form-group">
                <a asp-controller="Film" asp-action="Index" asp-route-filmId=@role.Film.FilmId><b>@role.Film.FilmName</b></a>
                <p>@role.Film.Year</p>
                <p>@role.Film.Country</p>
                <p>@Localizer["Role:"] @role.Title</p>
            </div>
        </div>
    }
</div>
