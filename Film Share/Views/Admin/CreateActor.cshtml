@model FilmShare.ViewModels.ActorModel

@{
    ViewData["Title"] = "Create Actor";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="col-md-6 col-md-offset-3 profileWrap">
    <div class="text-center">
        <h2>Create Actor</h2>
    </div>

    <hr />
    <div class="row">
        <form asp-action="CreateActor" enctype="multipart/form-data" method="post">

            <div class="profileInfo">
                <div class="leftProfile">
                    <div class="avatarUserBox">
                        <img id="photoImage" src="~/images/user-profile.jpg" asp-for="PosterPath" style='height: 100%; width: 100%; object-fit: contain'>
                    </div>
                    <div class="centerButtonContainer">
                        <input type="file" id="selectedFile" style="display: none;" name="poster" accept="image/*" />
                        <input class="btn-theme" type="button" onclick="document.getElementById('selectedFile').click();" title="Update photo" value="Update photo">
                    </div>

                </div>
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label"><b>NAME:</b></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"><b>DATE OF BIRTH:</b></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="profileInfo">
                        <div class="leftProfile">
                            <input type="submit" style="width: 100px" value="Save" class="btn btn-theme btn-block" />
                        </div>
                        <div class="form-group">
                            <a asp-action="Index" asp-controller="Admin">
                                <input type="button" style="width: 100px" value="Cancel" class="btn btn-theme btn-block" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#photoImage').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#selectedFile").change(function () {
        readURL(this);
    });

    $(document).ready(function () {
        $("#adminSub").css("background", "#47a7cc")
        $("#adminText").css("color", "white")
    })
</script>

