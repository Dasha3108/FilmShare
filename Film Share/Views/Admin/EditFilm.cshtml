@model FilmShare.ViewModels.FilmModel

@{
    ViewData["Title"] = "Create Film";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="col-md-6 col-md-offset-3 profileWrap">
    <div class="text-center">
        <h2>Edit Film</h2>
    </div>

    <hr />
    <div class="row">
        <form asp-action="EditFilm" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="FilmId" value="@Model.FilmId" id="filmId" />

            <div class="profileInfo">
                <div class="leftProfile">
                    <div class="avatarUserBox">
                        <img id="posterImage" src="@Model.PosterPath" asp-for="PosterPath" style='height: 100%; width: 100%; object-fit: contain'>
                    </div>
                    <div class="centerButtonContainer">
                        <input type="file" id="selectedFile" style="display: none;" name="poster" accept="image/*" />
                        <input class="btn-theme" type="button" onclick="document.getElementById('selectedFile').click();" title="Update poster" value="Update poster">
                    </div>

                </div>
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label"><b>NAME:</b></label>
                        <input asp-for="FilmName" class="form-control" />
                        <span asp-validation-for="FilmName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"><b>YEAR:</b></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"><b>COUNTRY:</b></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
            </div>
                        
            <div class="profileInfo">
                <div class="leftProfile">
                    <input type="submit" style="width: 100px" value="Save" class="btn btn-theme btn-block" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" asp-controller="Admin">
                        <input type="button" style="width: 100px" value="Cancel" class="btn btn-theme btn-block" />
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#posterImage').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#selectedFile").change(function () {
                            readURL(this);
                        });

    $(document).ready(function () {
        $("#adminSub").css("background", "#47a7cc")
        $("#adminText").css("color", "white")
    })

</script>

